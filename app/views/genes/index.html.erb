<p id="notice"><%= notice %></p>

<h1>Genes</h1>

<table>
  <thead>
    <tr>
      <th>Organism</th>
      <th>Gene name</th>
      <th>Chromosome name</th>
      <th>Start position</th>
      <th>End position</th>
      <th>Orientation</th>
      <th>Definition</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @genes.each do |gene| %>
      <tr>
        <td><%= gene.organism.data_source_name %></td>
        <td><%= gene.gene_name %></td>
        <td><%= gene.chromosome_name %></td>
        <td><%= gene.start_position %></td>
        <td><%= gene.end_position %></td>
        <td><%= gene.orientation %></td>
        <td><%= gene.definition %></td>
        <td><%= link_to 'Show', gene %></td>
        <td><%= link_to 'Edit', edit_gene_path(gene) %></td>
        <td><%= link_to 'Destroy', gene, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

