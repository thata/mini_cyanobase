<p id="notice"><%= notice %></p>

<h1>Organisms</h1>

<table>
  <thead>
    <tr>
      <th>Data source name</th>
      <th>Full name</th>
      <th>Tax</th>
      <th>Tax lineage</th>
      <th>Release note</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @organisms.each do |organism| %>
      <tr>
        <td><%= organism.data_source_name %></td>
        <td><%= organism.full_name %></td>
        <td><%= organism.tax_id %></td>
        <td><%= organism.tax_lineage %></td>
        <td><%= organism.release_note %></td>
        <td><%= link_to 'Show', organism %></td>
        <td><%= link_to 'Edit', edit_organism_path(organism) %></td>
        <td><%= link_to 'Destroy', organism, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

